{
  "name": "@aaronmeese.com/terminal-application",
  "version": "1.0.0",
  "description": "aaronmeese.com Terminal Application",
  "scripts": {
    "eslint": "eslint index.js",
    "stylelint": "stylelint index.scss",
    "build": "webpack",
    "watch": "webpack --watch",
    "prepublishOnly": "npm run eslint && npm run stylelint && rm ./dist/* && NODE_ENV=production npm run build"
  },
  "files": [
    "dist/",
    "metadata.json",
    "server.js"
  ],
  "dependencies": {
    "clipboard-polyfill": "^2.8.6",
    "hyperapp": "^1.2.10",
    "node-pty": "^0.9.0",
    "uuid": "^7.0.1",
    "xterm": "^4.4.0",
    "xterm-addon-attach": "^0.5.0",
    "xterm-addon-fit": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.16.7",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.1",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "eslint": "^8.7.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.5.3",
		"rollup": "^2.66.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.0",
    "sass-loader": "^12.4.0",
    "stylelint": "^14.3.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-scss": "^4.1.0",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "@aaronmeese.com/eslint-config"
  },
  "stylelint": {
    "extends": "@aaronmeese.com/stylelint-config"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {}
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
